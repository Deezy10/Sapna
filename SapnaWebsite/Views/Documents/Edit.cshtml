@model Document

@{
    Layout = "_Dashboard";
}

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb pull-right">
            <li><a asp-action="Index" asp-controller="Documents">Back to Document List</a></li>
            <li><a asp-action="Index" asp-controller="Dashboard">Back to Dashboard</a></li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="formwrapper">
    <form class="documentsform" asp-action="Edit">
        <h2 class="documentsheader"><i class="fa fa-book"> Document</i></h2>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="DocumentId" />

        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="Name" placeholder="Name of Document" required="" autofocus="" />
        <br>


        <span asp-validation-for="Ducument" class="text-danger"></span>
        <label asp-for="Ducument">Upload a Document</label>
        <input type="file" class="form-control-file" asp-for="Ducument">
        <br>

        <button id="form_button" class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
    </form>
</div>
