@model Client

@{
    Layout = "_Dashboard";
}

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb pull-right">
            <li><a asp-action="Index" asp-controller="Clients">Back to Client List</a></li>
            <li><a asp-action="Index" asp-controller="Dashboard">Back to Dashboard</a></li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="formwrapper">
    <form class="clientform" asp-action="Edit">
        <h2 class="clientheader"><i class="fa fa-users"> Client</i></h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="ClientId" />

        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="Name" placeholder="Client Name" required="" autofocus="" />
        <br>

        <span asp-validation-for="Email" class="text-danger"></span>
        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" asp-for="Email">
        <br>

        <span asp-validation-for="Telephone" class="text-danger"></span>
        <input type="tel" class="form-control" asp-for="Telephone" placeholder="Telephone Number" required="" autofocus="" />
        <br>

        <span asp-validation-for="Address" class="text-danger"></span>
        <textarea asp-for="Address" class="form-control" id="exampleTextarea" rows="3" placeholder="Address"></textarea>
        <br>

        <button id="form_button" class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
    </form>
</div>