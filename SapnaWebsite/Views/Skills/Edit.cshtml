@model Skill

@{
    Layout = "_Dashboard";
}

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb pull-right">
            <li><a asp-action="Index" asp-controller="Skills">Back to Skill List</a></li>
            <li><a asp-action="Index" asp-controller="Dashboard">Back to Dashboard</a></li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="formwrapper">
    <form class="skillsform" asp-action="Edit">
        <h2 class="skillsheader"><i class="fa fa-wrench"> Skill</i></h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SkillId" />
        <span asp-validation-for="Name" class="text-danger" />
        <input asp-for="Name" type="text" class="form-control" placeholder="Name" required="" autofocus="" />

        <br />

        <button id="skills_button" class="btn btn-lg btn-primary btn-block" type="submit">Update</button>

    </form>
</div>

