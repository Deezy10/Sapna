@model Skill

@{
    Layout = "_Dashboard";
}

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb pull-right">
            <li><a asp-action="Index" asp-controller="Skills">Back to Skil List</a></li>
            <li><a asp-action="Index" asp-controller="Dashboard">Back to Dashboard</a></li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="formwrapper">
    <form class="skillsform" asp-action="Create" enctype="multipart/form-data">
        <h2 class="skillsheader"><i class="fa fa-wrench"> Skill</i></h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" type="text" class="form-control" placeholder="Name" required="" autofocus="" />
        <br />

        <span asp-validation-for="Logo" class="text-danger"></span>
        <label asp-for="Logo">Upload a Document</label>
        <input type="file" class="form-control-file" asp-for="Logo">
        <br />
        <br />
        <button id="skills_button" class="btn btn-lg btn-primary btn-block" type="submit">Create</button>

    </form>
</div>

