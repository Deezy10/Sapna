    <!-- End slider -->
    <!-- Start Projects-->
    <section id="feature">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-area">
                        <h2 class="title">Projects</h2>
                        <span class="line"></span>
                        <p></p>
                        <div class="row">
                            @foreach (var item in Model.Projects)
                            {
                                <div class="col-md-4">
                                    <a href="#">
                                        <img src="~/images/icon.jpg" alt="image" class="img-rounded">
                                        <p>@item.Title</p>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Projects -->
    <!-- Start news -->
    <section id="latest-news">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-area">
                        <h2 class="title">News</h2>
                        <span class="line"></span>
                        <p></p>
                        <div class="row">
                            @foreach (var item in Model.News)
                            {
                                <div class="col-sm-6 col-md-4">
                                    <div class="thumbnail">
                                        <img src="~/images/icon.jpg" alt="image" class="img-rounded" style="padding-top:20px;">
                                        <div class="caption">
                                            <h3>@item.Title</h3>
                                            <button id="login_button" type="button" class="btn btn-lg btn-primary btn-sm" data-toggle="modal" data-target=".bs-example-modal-lg_news1">Read more</button>
                                            <div class="modal fade bs-example-modal-lg_news1" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                            <h4 class="modal-title" id="myModalLabel">@item.Title</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>@item.details</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button onclick="window.location='.html';" id="login_button" type="button" class="btn btn-lg btn-primary btn-sm" data-dismiss="modal">More news</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End latest news -->
    <!-- Start Events -->
    <section id="service">
        <div class="container">
