                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Documents"><i class="fa fa-book"></i> Documents</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Skills"><i class="fa fa-wrench"></i> Skills</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Specializations"><i class="fa fa-code-fork"></i> Specializations</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Roles"><i class="fa fa-tasks"></i> Roles</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">

            <!-- /.row -->
            <div class="row">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <script src="~/js/backend.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>