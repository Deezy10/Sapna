                        <li>
                            <a asp-actionr="Index" asp-controller="Dashboard"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Clients"><i class="fa fa-users"></i> Clients</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Projects"><i class="fa fa-edit fa-fw"></i> Projects</a>
